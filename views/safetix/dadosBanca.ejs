		<h1>Dados dos Ingressos</h1>

		<div class="row">
			<div class="col-sm-4">
				<div class="form-group">
					<label for="nomeFesta">Festa</label>
					<input id="nomeFesta" class="form-control" type="text" readonly="readonly" value="<%= evento.nome %>" />
					<input id="idevento" name="idevento" type="hidden" value="<%= evento.id %>" />
				</div>
			</div>

			<div class="col-sm-4">
				<div class="form-group">
					<label for="tipoIngresso">Tipo de ingresso</label>
					<select id="tipoIngresso" class="form-control" size="1">
						<option value="inteira">Inteira</option>
						<option value="meia escolar">Meia</option>
						<option value="meia universidade">Meia Universidade</option>
					</select>
				</div>
