<%- contentFor("styles") %>
	<style type="text/css">
		.festa {
			background-image: url(/imagens/festa.jpg);
			background-repeat: no-repeat;
			background-size: cover;
			background-position: center;
			text-align: center;
			padding: 150px 50px;
			margin-bottom: 30px;
		}
	</style>

	<%- contentFor("scripts") %>
		<script type="text/javascript">
			function atualizarRecebe() {
				var qtd = parseInt($("#quantidade").val());
				var valor = parseFloat($("#valor").val().replace(",", "."));
				var total = 0;
				if (!isNaN(qtd) && qtd > 0 && !isNaN(valor) && valor > 0) {
					total = qtd * valor * 0.8;
				}
				$("#recebe").val(total.toFixed(2).replace(".", ","));
			}
			$("form").validate({
				rules: {
					// Para quase tudo existem duas, três ou mais formas de fazer a mesma coisa...! :)
					nome: {
						quantidade: true,
						minlength: 1
					},
					//email: {
					//	required: true,
					//	maxlength: 50,
					//	email: true
					//}
				},

				submitHandler: function (form) {
					if ($.active) {
						return;
					}
					$.ajax({
						url: "<%- root %>/api/ingresso/criar",
						method: "POST",
						data: $(form).serialize(),

						success: function (dadosDeRetorno) {
							form.reset();
							alert("Ingresso criado com sucesso! Id: " + dadosDeRetorno);
						},

						error: function (xhr) {
							try {
								// Tentar converter a resposta em um JSON
								alert(JSON.parse(xhr.responseText));
							} catch (excecao) {
								// Se não foi possível converter a resposta em JSON,
								// apenas ignora e mostra a mensagem de erro padrão
								alert("Algo deu errado :(");
							}
						}
					});
				}
			})
		</script>