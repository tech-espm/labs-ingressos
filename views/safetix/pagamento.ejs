<div class="limitador">
	<div class="text-center">
		<img src="/imagens/linha-do-tempo-pagamento.png" />
	</div>
	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-6">
				<h2>Endereço de Cobrança</h2>
			</div>
			<div class="col-sm-6">
				<h2>Forma de Pagamento</h2>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-3">
				<div class="form-group">
					<label for="pais">País</label>
					<input type="text" id="pais" name="pais" class="form-control box" />
				</div>
			</div>
			<div class="col-sm-3">
				<div class="form-group">
					<label for="estado">Estado</label>
					<input type="text" id="estado" name="estado" class="form-control box" />
				</div>
			</div>
			<div class="col-sm-6">
				<div class="form-group">
					<label for="ncartao">Número do cartão</label>
					<input type="text" id="ncartao" name="ncartao" class="form-control box" />
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-6">
				<div class="form-group">
					<label for="cidade">Cidade</label>
					<input type="text" id="cidade" name="cidade" class="form-control box" />
				</div>
			</div>
			<div class="col-sm-6">
				<div class="form-group">
					<label for="bandeira">Selecione a bandeira:</label>
					<input type="text" id="bandeira" name="bandeira" class="form-control box" />
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-6">
				<div class="form-group">
					<label for="bairro">Bairro</label>
					<input type="text" id="bairro" name="bairro" class="form-control box" />
				</div>
			</div>
			<div class="col-sm-3">
				<div class="form-group">
					<label for="validade">Validade</label>
					<input type="text" id="validade" name="validade" class="form-control box" />
				</div>
			</div>
			<div class="col-sm-3">
				<div class="form-group">
					<label for="cvv">CVV</label>
					<input type="text" id="cvv" name="cvv" class="form-control box" />
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-6">
				<div class="form-group">
					<label for="rua">Rua</label>
					<input type="text" id="rua" name="rua" class="form-control box" />
				</div>
			</div>
			<div class="col-sm-6">
				<div class="form-group">
					<label for="nomecartao">Nome no cartão</label>
					<input type="text" id="nomecartao" name="nomecartao" class="form-control box" />
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-3">
				<div class="form-group">
					<label for="numero">Número</label>
					<input type="text" id="numero" name="numero" class="form-control box" />
				</div>
			</div>
			<div class="col-sm-3">
				<div class="form-group">
					<label for="complemento">Complemento</label>
					<input type="text" id="complemento" name="complemento" class="form-control box" />
				</div>
			</div>
			<div class="col-sm-6">
				<div class="form-group">
					<label for="cpf">CPF do titular do cartão</label>
					<input type="text" id="cpf" name="cpf" class="form-control box" />
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-3">
				<div class="form-group">
					<label for="cep">CEP</label>
					<input type="text" id="cep" name="cep" class="form-control box" />
				</div>
			</div>
			<div class="col-sm-9 text-right">
				<label class="checkbox">
					<input type="checkbox" name="webmaster" value="salvar" class="contorno" /> Salvar cartão para
					futuras compras
				</label>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-6"></div>
			<div class="col-sm-6 text-right">
				<button type="button" onclick="pagar()" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#comprar3">Efetuar Pagamento</button>
			</div>
		</div>
	</div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="comprar3">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
				<h4 class="modal-title">Confirmar Pagamento?</h4>
			</div>
			<div class="modal-body" style="display: flex; justify-content: center;">
				<button style="margin-right:10px;" type="button" class="btn btn-primary"><a style="color:white" href="<%- root %>/confirmacaopagamento">Sim</a></button>
				<button type="button" class="btn btn-default" data-dismiss="modal">Não</button>
			</div>
			<div class="modal-footer">
				
				
			</div>
		</div>
	</div>
</div>